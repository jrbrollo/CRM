# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Optional: Firebase Measurement ID (for Analytics)
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# App Configuration
VITE_APP_NAME=CRM Planejamento Financeiro
VITE_APP_URL=http://localhost:8080

# Environment
NODE_ENV=development

# Email Service (optional - for production email sending)
# VITE_SENDGRID_API_KEY=your_sendgrid_api_key
# VITE_SMTP_HOST=smtp.gmail.com
# VITE_SMTP_PORT=587
# VITE_SMTP_USER=your_email@gmail.com
# VITE_SMTP_PASSWORD=your_app_password

# WhatsApp API (optional - for WhatsApp integration)
# VITE_WHATSAPP_API_KEY=your_whatsapp_api_key
# VITE_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Sentry (optional - for error tracking in production)
# VITE_SENTRY_DSN=your_sentry_dsn
